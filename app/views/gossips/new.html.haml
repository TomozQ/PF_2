.gossip_new
  .gossip_new__title
    %h1
      Gossip作成
    .gossip_new__title__return
      =link_to root_path do
        Home
      =link_to gossips_path do
        GossipsTalk
  .gossip_new__wrapper
    .gossip_new__wrapper__effect
      .gossip_new__wrapper__effect__form
        = form_with model: @gossip, local: true do |f|
          .GossipForm_input
            = f.text_field :name, placeholder: "Gossipタイトルを入力してください"
          .GossipForm_check  
            = f.collection_check_boxes :user_ids, User.where(id: current_user.id), :id, :name
          .GossipForm_btn  
            = f.submit "作成"