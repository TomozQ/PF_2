.middle_1
  .middle_1__wrapper
    = icon('fas', 'ghost', class: 'icon__ghost')
    %a(href="/searchs")
      = icon('fas', 'globe-europe', class: 'icon__globe-europe')
    .middle_1__wrapper__user
      .middle_1__wrapper__user__name
        = link_to edit_user_path(current_user) do
          -if current_user.image.present?
            = image_tag src= "#{current_user.image}"
          -else
            = image_tag src='ログイン素材.png'
          = current_user.name