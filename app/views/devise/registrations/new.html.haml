.userNew
  .userNew__account
    %h1
      新規アカウントの作成
    .login-btn
      = render "devise/shared/links"
    .userNew__account__loginForm
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .loginFormIn
          .loginFormIn__Field
            = f.label :name
          .loginFormIn__input
            = f.text_field :name, autofocus: true
          .loginFormIn__Field
            = f.label :email
          .loginFormIn__input
            = f.email_field :email
          .loginFormIn__Field
            = f.label :password
            %i (英数字8文字以上)
          .loginFormIn__input
            = f.password_field :password, autocomplete: "off"
          .loginFormIn__Field
            = f.label :password_confirmation
          .loginFormIn__input
            = f.password_field :password_confirmation, autocomplete: "off"
          .loginFormIn__Field
            = f.label :image
          .loginFormIn__input
            = f.file_field :image
        = f.submit "新規登録", class: 'LoginButton'


